<Alloy>
	<Collection src="etablishment"/>

	<Window id="moment" title="Happy Hours">
		<Widget id="ptr" src="nl.fokkezb.pullToRefresh" onRelease="myRefresher">
			<TableView layout="vertical" width="100%" height="100%" id="happyhourcontents" dataCollection="etablishment" dataFilter="haveHappyFilter" dataTransform="doTransform">
				<TableViewRow backgroundColor="#fff" tintColor="#fff" selectedBackgroundColor="white" selectedColor="#fff" touchEnabled="false"  width="100%" height="70%" idEtablishment="{id}" titleEtablishment="{name}" onClick="goEtablishment" >
					<Label text="{name}" class="name"/>
					<Label text="{adress}" class="adress"/>
					<Label text="Toulouse" class="ville"/>
					<Label text="{now}" class="happy"/>
					<View class="image">
						<ImageView width="100%" height="100%" image="http://b9ee9515.ngrok.io/web/uploads/images/etablishment/{image}" defaultImage="background/background.png"/>
						<View backgroundColor="white" class="description" >
							<Label class="description_label" text="{description_2}" />
							<ImageView class="image_arrow" image="/icons/right-arrow.png"/>
						</View>
					</View>
				</TableViewRow>
			</TableView>
		</Widget>
	</Window>
</Alloy>
