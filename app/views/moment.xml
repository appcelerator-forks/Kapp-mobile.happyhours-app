<Alloy>
	<Collection src="etablishment" />
	<Window id="moment" title="Happy Hours" tabBarHidden="true">
		<Widget id="ptr" src="nl.fokkezb.pullToRefresh" onRelease="myRefresher">
			<TableView  layout="vertical" width="100%" height="90%" id="happyhourcontents" dataCollection="etablishment" dataFilter="haveHappyFilter" dataTransform="transform">
				<TableViewRow width="100%" height="20%" idEtablishment="{id}" titleEtablishment="{name}" onClick="goEtablishment">
					<Label text="{name}" class="name" />
				<Label text="{now}" class="happy"/>
				</TableViewRow>
			</TableView>
		</Widget>
    </Window>
</Alloy>